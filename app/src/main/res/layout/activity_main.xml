<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ilife.shining.movingtrack.widget.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:leftBtnIcon="@android:drawable/ic_menu_search"
        app:titleTxt="日迹"
        app:titleTxtSize="8sp"
        app:titleTxtstyle="bold">

    </com.ilife.shining.movingtrack.widget.CommonTitleBar>


    <com.ilife.shining.movingtrack.widget.UnableScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <include layout="@layout/view_bottom_tab" />

</LinearLayout>
